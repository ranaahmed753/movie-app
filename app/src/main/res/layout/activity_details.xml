<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".view.DetailsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="@color/bg_color"
        app:title="Movie App"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
        <FrameLayout
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/movieImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/movie_image_gradient"
                android:layout_width="match_parent"
                android:alpha="0.9"
                android:layout_height="match_parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backButton"
                android:padding="6dp"
                android:alpha="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:alpha="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/back_button_icon"
                    android:scaleType="centerCrop"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
           <TextView
               android:id="@+id/movieName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:text="Avengers Endgame"
               android:gravity="start"
               android:textColor="@color/text_title"
               android:fontFamily="@font/nunito_sans"
               android:textSize="15sp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/movieName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:rating="3.0"
                android:stepSize="0.1"
                />

            <TextView
                android:id="@+id/ratingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/ratingBar"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                app:layout_constraintTop_toTopOf="@+id/ratingBar"
                app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
                android:text="5.6"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/movieIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                android:text="Movie Id"
                android:padding="10dp"
                android:background="@drawable/card_back"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/movieId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/movieIdText"
                app:layout_constraintTop_toTopOf="@+id/movieIdText"
                app:layout_constraintBottom_toBottomOf="@+id/movieIdText"
                android:text="1234"
                android:background="@drawable/card_back"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/releaseDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieId"
                android:text="Release Date"
                android:background="@drawable/card_back"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/releaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/releaseDateText"
                app:layout_constraintTop_toTopOf="@+id/releaseDateText"
                app:layout_constraintBottom_toBottomOf="@+id/releaseDateText"
                android:text="1april 2022"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:gravity="start"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/card_back"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/popularityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/releaseDateText"
                android:text="Popularity"
                android:background="@drawable/card_back"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/popularityCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/popularityText"
                app:layout_constraintTop_toTopOf="@+id/popularityText"
                app:layout_constraintBottom_toBottomOf="@+id/popularityText"
                android:text="1234"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:gravity="start"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/card_back"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/voteCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popularityText"
                android:text="Votes"
                android:background="@drawable/card_back"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/voteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/voteCountText"
                app:layout_constraintTop_toTopOf="@+id/voteCountText"
                app:layout_constraintBottom_toBottomOf="@+id/voteCountText"
                android:text="1234"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:gravity="start"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/card_back"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/overViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voteCountText"
                android:text="Overview"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/text_title"
                android:fontFamily="@font/nunito_sans"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/movieOverView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overViewText"
                android:text="Avengers Endgame"
                android:textColor="@color/color_overview"
                android:fontFamily="@font/nunito_sans"
                android:gravity="start"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/card_back"
                android:layout_marginTop="10dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>